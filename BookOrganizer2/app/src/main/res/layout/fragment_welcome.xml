<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mypc.bookorganizer.MainActivity"
    android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/probackground"/>
    <TextView
        android:id="@+id/text_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="118dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#2A2728"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnBooks"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="188dp"
        android:background="@drawable/colored_button"
        android:text="Books List"
        android:textColor="#fdfdfe"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="208dp"
        android:layout_height="49dp"
        android:layout_centerInParent="true"
        android:background="@drawable/colored_button"
        android:text="My Scheduals"
        android:textColor="#fdfdfe"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/setAlarm_btn"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="190dp"
        android:background="@drawable/colored_button"
        android:text="set alarm"
        android:textColor="#fdfdfe"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="116dp"
        android:background="@drawable/buttoun"
        android:text="log out"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="42dp"
        android:layout_height="94dp"
        android:layout_below="@+id/text_name_info"
        android:layout_toStartOf="@+id/btnBooks"
        app:srcCompat="@drawable/book_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="94dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/schedual_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="172dp"
        android:layout_toStartOf="@+id/btnBooks"
        app:srcCompat="@drawable/alarm_icon" />


</RelativeLayout>